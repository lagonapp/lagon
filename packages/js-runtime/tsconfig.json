{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022", "WebWorker"],
    "types": [], // Exclude node types
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
  },
  "exclude": ["./dist/**/*"],
}
