    "fastify": "^3.29.0",
    "inquirer": "^9.0.0",
    "node-fetch": "^3.2.6",
    "open": "^8.4.0",
    "update-notifier": "^6.0.1"
  },
  "devDependencies": {
    "@lagon/common": "workspace:0.0.1",
    "@types/inquirer": "^8.2.1",
    "@types/update-notifier": "^5.1.0"
  }
}
