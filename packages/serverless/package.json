    "@sentry/tracing": "^7.1.1",
    "dotenv": "^16.0.1",
    "fastify": "^3.29.0",
    "isolated-vm": "^4.4.1",
    "redis": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.35"
  }
