{
  "name": "@lagon/runtime",
  "version": "0.0.2",
  "description": "JavaScript Serverless Runtime for Lagon",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsup src/index.ts --format=esm --dts --watch",
    "build": "tsup src/index.ts --format=esm --dts",
    "build:runtime": "for file in src/runtime/*; do tsup $file --format=esm --dts --out-dir dist/runtime; done",
    "lint": "eslint --cache --ignore-pattern dist .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "isolated-vm": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.35"
  },
  "peerDependencies": {
    "isolated-vm": "^4.4.1"
  }
}
