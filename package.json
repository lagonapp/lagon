{
  "name": "lagon",
  "version": "1.0.0",
  "description": "Deploy Serverless Functions at the Edge",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:update": "pnpm test -- -u",
    "test:watch": "vitest",
    "build": "turbo run build --continue",
    "lint": "eslint --cache --ignore-pattern dist .",
    "typecheck": "turbo run typecheck --continue",
    "docker:build:serverless": "docker build -t lagon/serverless -f docker/serverless.Dockerfile --platform=linux/amd64 .",
    "docker:start:serverless": "docker run --rm -p 4000:4000 lagon/serverless",
    "docker:build:nginx": "docker build -t lagon/nginx -f docker/nginx.Dockerfile --platform=linux/amd64 ./docker/nginx",
    "docker:start:nginx": "docker run --rm -p 80:80 lagon/nginx",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "concurrently": "^7.2.1",
    "esbuild": "^0.14.41",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "tsup": "^6.0.1",
    "turbo": "^1.3.1",
    "typescript": "^4.6.4",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.15.1"
  }
}
